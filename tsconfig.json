{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2018",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build"
  },
  "exclude": ["node_modules"]
}
